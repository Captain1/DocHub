        <%= form_for(@user) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.label :email %>
          <%= f.text_field :email %>
          <%= f.label :password %>
          <%= f.password_field :password %>
          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation %>
          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails">Gravatar Settings</a>
          </br></br></br></br>
          <div class = "center">
          <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
          <% end %>
          </div>