<li>
<div class= "col-md-2">
    <%= link_to gravatar_for(micropost.user), micropost.user %>
    </div>
    <div class= "col-md-10">
  <span class="user">
    <%= link_to micropost.user.name, micropost.user %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span></br>
  <span>
    <%= micropost.content %>
  </span>
  <span>      <% if current_user?(micropost.user) %>
        <%#= link_to "Edit", edit_micropost_path%>
        <%= button_to micropost,method: :delete,
                                data: { confirm: "You sure?" },
                                title: micropost.content ,
                                class: 'btn btn-circle pull-right' do %>
        <i class="glyphicon glyphicon-trash"></i>
        <% end %>
        <i class="glyphicon glyphicon-option-vertical pull-right"></i>
        <%= link_to edit_micropost_path, class: 'btn btn-circle pull-right' do %>
        <i class="glyphicon glyphicon-edit"></i>
        <% end %>
    <% end %>  </span>
  </div>
</li>
<%#= will_paginate @microposts %>